<UserControl x:Class="Caliburn.Micro.Hello.SimpleContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Caliburn.Micro.Hello" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="200" Width="300">
    <xctk:BusyIndicator Name="busyIndicator"  BusyContent="Publish Event ..." IsBusy="{Binding IsShow}" Style="{x:Null}">
    <StackPanel>
            <TextBlock Text="{Binding TextContent}"/>
            <Button Name="ClickCtr"  Content="Click Me"/>
            <Button Name="ClickBtn"  Content="Click Me"/>
            <Button Name="EventTest"  Content="PublishEvent"/>
        </StackPanel>
    </xctk:BusyIndicator>
</UserControl>
